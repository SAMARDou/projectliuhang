<resources>
    <declare-styleable name="MyFontTextView">
        <attr name="exampleString" format="string" />
        <attr name="exampleDimension" format="dimension" />
        <attr name="exampleColor" format="color" />
        <attr name="exampleDrawable" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="light_width" format="dimension" />
        <attr name="light_color" format="color" />
    </declare-styleable>
    <declare-styleable name="ParkLotImageView">
        <attr name="parkborder_width" format="dimension" />
        <attr name="parkborder_color" format="color" />
        <attr name="parklight_width" format="dimension" />
        <attr name="parklight_color" format="color" />
    </declare-styleable>
    <declare-styleable name="CircleProgressBar">
        <attr name="max" format="integer" /> <!-- 进度条最大值 -->
        <attr name="fill" format="boolean" /> <!-- 是否填充圆形区域 -->
        <attr name="Paint_Width" format="integer" /> <!-- 画笔宽度，填充模式下无效，会被重置为0 -->
        <attr name="Paint_Color" format="integer" /> <!-- 画笔颜色 -->
        <attr name="Inside_Interval" format="integer" /> <!-- 圆形区域向里缩进的距离 -->
    </declare-styleable>
    <declare-styleable name="PullToRefresh">
        <attr name="mode" format="reference">
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
            <flag name="both" value="0x3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="dashedline">
        <attr name="line_Color" format="color" />
    </declare-styleable>
    <declare-styleable name="NumberPicker">
        <attr name="normalTextColor" format="color" />
        <attr name="normalTextSize" format="dimension" />
        <attr name="selecredTextColor" format="color" />
        <attr name="selecredTextSize" format="dimension" />
        <attr name="unitHight" format="dimension" />
        <attr name="itemNumber" format="integer" />
        <attr name="bordercolor" format="color" />
        <attr name="lineColor" format="color" />
        <attr name="maskHight" format="dimension" />
        <attr name="noEmpty" format="boolean" />
        <attr name="isEnable" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SuNumberPicker">
        <attr name="normalTextColors" format="color" />
        <attr name="normalTextSizes" format="dimension" />
        <attr name="selecredTextColors" format="color" />
        <attr name="selecredTextSizes" format="dimension" />
        <attr name="unitHights" format="dimension" />
        <attr name="itemNumbers" format="integer" />
        <attr name="lineColors" format="color" />
        <attr name="maskHights" format="dimension" />
        <attr name="noEmptys" format="boolean" />
        <attr name="isEnables" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="radius" format="dimension" />
        <attr name="strokewidth" format="dimension" />
    </declare-styleable>
    <declare-styleable name="RotateLoading">
        <attr name="loading_width" format="dimension" />
        <attr name="loading_color" format="color" />
        <attr name="shadow_position" format="integer" />
        <attr name="loading_speed" format="integer" />
    </declare-styleable>

    <!--事件的自定义view-->
    <declare-styleable name="HoloCircularProgressBar">
        <attr name="stroke_width" format="dimension" />
        <attr name="progress" format="float" />
        <attr name="progress_color" format="color" />
        <attr name="progress_background_color" format="color" />

        <attr name="android:gravity" />
    </declare-styleable>

    <attr name="circularProgressBarStyle" format="reference" />
    <declare-styleable name="CradleBall">
        <attr name="cradle_ball_color" format="color" />
    </declare-styleable>

    <!--渐变半圆进度条-->
    <declare-styleable name="SemicircleRoundProgressBar">
        <attr name="ringColor" format="color" />
        <attr name="ringProgressColor" format="color" />
        <attr name="ringWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="maxProgress" format="integer" />
        <attr name="currentProgress" format="integer" />
        <attr name="isGradient" format="boolean" />
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="maxAngle" format="integer" />
        <attr name="startAngle" format="integer" />

    </declare-styleable>
</resources>
