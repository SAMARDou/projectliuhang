        android:textSize="25dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                        开发商 "
            android:textColor="#8B8970"
